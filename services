  postgres:
    image: postgres:13
    environment:
      POSTGRES_USER: airflow
      POSTGRES_PASSWORD: airflow
      POSTGRES_DB: airflow
    volumes:
      - postgres-db-volume:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD", "pg_isready", "-U", "airflow"]
      interval: 5s
      retries: 5
    restart: always

# Did not use.
docker run -it \
   -e POSTGRES_USER=“root” \
   -e POSTGRES_PASSWORD=“root” \
   -e POSTGRES_DB=“ny_taxi” \
   -v /Users/craigmiles-clarke/GitHub/docker/ny_taxi_postgres_data:/var/lib/postgresql/data \
   -p 5431:5432 \
   postgres:13

# The one which I used (this uses docker volumes rather than volume binding).
# To use the latter, I would list my working directory after the -v flag.
docker run -it \
   -e POSTGRES_DB=ny_taxi \
   -e POSTGRES_USER=postgres \
   -e POSTGRES_PASSWORD=postgres \
   -v vol-pgdata:/var/lib/postgresql/data \
   -p 5432:5432 \
   --name pgdatabase \
   postgres:17-alpine

# Access via:
pgcli -h localhost -p 5432 -u postgres -d ny_taxi

# Website for taxi trips:
https://www.nyc.gov/site/tlc/about/tlc-trip-record-data.page

# Data dictionary:
https://www.nyc.gov/assets/tlc/downloads/pdf/data_dictionary_trip_records_yellow.pdf
