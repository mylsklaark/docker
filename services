# Did not use.
services:
  postgres:
    image: postgres:13
    environment:
      POSTGRES_USER: airflow
      POSTGRES_PASSWORD: airflow
      POSTGRES_DB: airflow
    volumes:
      - postgres-db-volume:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD", "pg_isready", "-U", "airflow"]
      interval: 5s
      retries: 5
    restart: always

# For volume binding, use this:
docker run -it \
  --name ny_taxi_postgres \
  -e POSTGRES_USER=root \
  -e POSTGRES_PASSWORD=root \
  -e POSTGRES_DB=ny_taxi \
  -v ~/docker/ny_taxi_postgres_data:/var/lib/postgresql/data \
  -p 5432:5432 \
  postgres:13

# Access via:
pgcli -h localhost -p 5432 -d ny_taxi -U root

# An alternative, using docker volumes:
docker run -it \
   -e POSTGRES_DB=ny_taxi \
   -e POSTGRES_USER=postgres \
   -e POSTGRES_PASSWORD=postgres \
   -v vol-pgdata:/var/lib/postgresql/data \
   -p 5432:5432 \
   --name pgdatabase \
   postgres:17-alpine

# Access via:
pgcli -h localhost -p 5432 -u postgres -d ny_taxi

# Website for taxi trips:
https://www.nyc.gov/site/tlc/about/tlc-trip-record-data.page

# Data dictionary:
https://www.nyc.gov/assets/tlc/downloads/pdf/data_dictionary_trip_records_yellow.pdf

# PGAdmin:
docker run -it \
  -e PGADMIN_DEFAULT_EMAIL="admin@admin.com" \
  -e PGADMIN_DEFAULT_PASSWORD="root" \
  -p 8080:80 \
  dpage/pgadmin4

# Network:
# Note that this didn't work because of a naming conflict.
# Both containers are called 'pgdatabase'.
# See below for functioning code.

docker network create pg-network

docker run -it \
   -e POSTGRES_DB=ny_taxi \
   -e POSTGRES_USER=postgres \
   -e POSTGRES_PASSWORD=postgres \
   -v vol-pgdata:/var/lib/postgresql/data \
   -p 5432:5432 \
   --network=pg-network \
   --name pgdatabase \
   postgres:17-alpine

docker run -it \
   -e PGADMIN_DEFAULT_EMAIL="admin@admin.com" \
   -e PGADMIN_DEFAULT_PASSWORD="root" \
   -p 8080:80 \
   --network=pg-network \
   --name pgdatabase \
   dpage/pgadmin4

# Network revised

docker run -it \
   -e POSTGRES_DB=ny_taxi \
   -e POSTGRES_USER=postgres \
   -e POSTGRES_PASSWORD=postgres \
   -v vol-pgdata:/var/lib/postgresql/data \
   -p 5432:5432 \
   --network=pg-network \
   --name pgdatabase \
   postgres:17-alpine

docker run -it \
   -e PGADMIN_DEFAULT_EMAIL="admin@admin.com" \
   -e PGADMIN_DEFAULT_PASSWORD="root" \
   -p 8080:80 \
   --network=pg-network \
   --name pgadmin \
   dpage/pgadmin4

URL="https://github.com/DataTalksClub/nyc-tlc-data/releases/download/yellow/yellow_tripdata_2021-01.csv.gz"

# Dockerize ingest script (aborted in favour of Docker Compose)

python ingest_data.py \
   --user=root \
   --password=root \
   --host=localhost \
   --port=5432 \
   --db=ny_taxi \
   --table_name=yellow_taxi_trips \
   --url=${URL}

docker build -t taxi_ingest:v001 .